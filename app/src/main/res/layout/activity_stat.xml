<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/statback"
    tools:context="com.example.anh.fitapp.StatActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalSteps"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/silver"
        android:textSize="30dp"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="30dp"
        android:textColor="@color/silver"
        android:text="Total steps taken: "
        android:id="@+id/textView3"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressdrawable"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/progressBar1"
        android:layout_below="@id/totalSteps"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressdrawable"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/progressBar2"
        android:layout_below="@id/totalSteps"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/percentage2"
        android:text=""
        android:textSize="25dp"
        android:textColor="@color/silver"
        android:fontFamily="sans-serif-thin"
        android:layout_marginStart="51dp"
        android:layout_alignBaseline="@+id/percentage1"
        android:layout_alignBottom="@+id/percentage1"
        android:layout_alignStart="@+id/progressBar2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/percentage1"
        android:text=""
        android:layout_marginLeft="43dp"
        android:textSize="25dp"
        android:textColor="@color/silver"
        android:fontFamily="sans-serif-thin"
        android:layout_alignTop="@+id/progressBar1"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First 1000"
        android:textSize="25dp"
        android:textColor="@color/silver"
        android:fontFamily="sans-serif-thin"
        android:layout_below="@+id/progressBar1"
        android:id="@+id/textView"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    5k already"
        android:textSize="25dp"
        android:textColor="@color/silver"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/textView2"
        android:layout_below="@+id/progressBar2"
        android:layout_alignStart="@+id/progressBar2" />

</RelativeLayout>
